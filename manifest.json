{
    "manifest_version": 3,
    "name": "AI Article Summariser",
    "version": "1.0",
    "description": "Summarize articles and web content instantly with AI. Choose between Brief, Detailed, or Bullet-point summaries.",


    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],

    "action":{
        "default_popup": "popup.html",
        "default_icon": "icon64.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "options_page": "options.html",

    "host_permissions": ["<all_urls>"]
}